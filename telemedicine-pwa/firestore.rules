rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Chat messages rules
    match /chats/{chatId} {
      allow read, write: if request.auth != null;
    }
    
    // Chat sessions rules
    match /chatSessions/{sessionId} {
      allow read, write: if request.auth != null;
    }

    // Doctor availability rules
    match /doctorAvailability/{doctorId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.auth.uid == doctorId;
    }
    
    // Prescription rules
    match /prescriptions/{prescriptionId} {
      allow read: if request.auth != null && 
        (resource.data.patientId == request.auth.uid || 
         resource.data.doctorId == request.auth.uid);
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.doctorId;
      allow update: if request.auth != null && 
        request.auth.uid == resource.data.doctorId;
    }
    
    // Follow-up appointment rules
    match /followUps/{followUpId} {
      allow read: if request.auth != null && 
        (resource.data.patientId == request.auth.uid || 
         resource.data.doctorId == request.auth.uid);
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
        request.auth.uid == resource.data.doctorId;
    }

    // Consultation rules
    match /consultations/{consultationId} {
      allow read: if request.auth != null;  // Allow read for doctor load calculation
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         resource.data.doctorId == request.auth.uid);
    }

    // User profile rules
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.auth.uid == userId;
    }

    // Payment rules
    match /payments/{paymentId} {
      allow read: if request.auth != null && 
        resource.data.patientId == request.auth.uid;
      allow create: if request.auth != null;
    }

    // Doctor profile rules
    match /doctors/{doctorId} {
      allow read: if true;  // Allow public read for doctor matching
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
        request.auth.uid == doctorId;
      allow delete: if request.auth != null && 
        request.auth.uid == doctorId;
    }

    // Appointment rules
    match /appointments/{appointmentId} {
      allow read: if request.auth != null && 
        (resource.data.doctorId == request.auth.uid);
      allow write: if request.auth != null;
    }
  }
}